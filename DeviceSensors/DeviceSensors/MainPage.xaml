<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     xmlns:local="clr-namespace:DeviceSensors" x:Class="DeviceSensors.MainPage">
    <StackLayout>
        <Label Text="Accelerometer" />
        <ProgressBar Progress="{Binding AccValues[0]}" Margin="10, 0"/>
        <ProgressBar Progress="{Binding AccValues[1]}" Margin="10, 0"/>
        <ProgressBar Progress="{Binding AccValues[2]}" Margin="10, 0"/>
        <Label Text="{Binding Accelerometer}"/>
        
        <Label Text="Gyroscope" />
        <ProgressBar Progress="{Binding GyrValues[0]}" Margin="10, 0"/>
        <ProgressBar Progress="{Binding GyrValues[1]}" Margin="10, 0"/>
        <ProgressBar Progress="{Binding GyrValues[2]}" Margin="10, 0"/>
        <Label Text="{Binding Gyroscope}"/>
        
        <Label Text="Magnetometer" />        
        <ProgressBar Progress="{Binding MagValues[0]}" Margin="10, 0" />
        <ProgressBar Progress="{Binding MagValues[1]}" Margin="10, 0" />
        <ProgressBar Progress="{Binding MagValues[2]}" Margin="10, 0" />
        <Label Text="{Binding Magnetometer}"/>
    </StackLayout>
</ContentPage>