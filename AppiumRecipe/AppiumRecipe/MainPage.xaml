     xmlns:local="clr-namespace:AppiumRecipe" x:Class="AppiumRecipe.MainPage">
    <StackLayout Padding="32,0,32,0">
        <Entry x:Name= "InputEntry" Placeholder="Enter text here" VerticalOptions="CenterAndExpand"/>
        <Button Text="Send" Clicked="Handle_Clicked" />
