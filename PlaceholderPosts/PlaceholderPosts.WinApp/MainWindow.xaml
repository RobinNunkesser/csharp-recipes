<Window x:Class="PlaceholderPosts.WinApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlaceholderPosts.WinApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0"  x:Name="IdTextBox"/>
        <Button Grid.Row="1" Click="Button_Click">Test Retrieve Post</Button>
        <Label Grid.Row="2" x:Name="ResultLabel" />
    </Grid>
</Window>
