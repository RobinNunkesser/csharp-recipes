<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="ContentViewRecipe.MyView">
    <ContentView.Content>
        <StackLayout VerticalOptions="FillAndExpand">
            <Label x:Name="TitleLabel" HorizontalOptions="Center"
                   VerticalOptions="StartAndExpand" FontAttributes="Bold" />
            <Entry x:Name="ItemNrEntry"
                   Placeholder="Item nr or serial number" />
            <Label Text="or" HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
            <Button Text="Scan directly" VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
