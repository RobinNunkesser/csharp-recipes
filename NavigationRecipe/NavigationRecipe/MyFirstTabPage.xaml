        <ToolbarItem IconImageSource="dotnet_bot" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <Button Text="Navigate deeper" Clicked="Button_Clicked"
